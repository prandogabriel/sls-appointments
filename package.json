{
  "name": "sls-appointments",
  "private": true,
  "scripts": {
    "start": "POWERTOOLS_DEV=true sls offline start",
    "dev": "yarn start",
    "deploy": "sls deploy",
    "remove": "sls remove",
    "deploy:dev": "sls deploy --stage sandbox --region us-west-1",
    "remove:dev": "sls remove --stage sandbox --region us-west-1",
    "deploy:prod": "sls deploy --stage production --region us-east-1",
    "remove:prod": "sls remove --stage production --region us-east-1",
    "lint": "eslint --fix ./src/**/*.ts",
    "sls": "serverless",
    "test": "vitest"
  },
  "engines": {
    "node": ">=20"
  },
  "dependencies": {
    "@aws-lambda-powertools/logger": "^2.13.0",
    "@aws-lambda-powertools/parser": "^2.13.0",
    "@aws-sdk/client-dynamodb": "^3.731.1",
    "@aws-sdk/lib-dynamodb": "^3.731.1",
    "@middy/core": "^6.0.0",
    "zod": "~3"
  },
  "devDependencies": {
    "@serverless/typescript": "^3.0.0",
    "@types/aws-lambda": "^8.10.71",
    "@types/node": "^14.14.25",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitest/eslint-plugin": "^1.1.25",
    "esbuild": "^0.14.11",
    "eslint": "^8.44.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-import-resolver-typescript": "^3.5.5",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "eslint-plugin-sonarjs": "^0.19.0",
    "globals": "^15.14.0",
    "prettier": "^3.0.0",
    "serverless": "^3.0.0",
    "serverless-esbuild": "^1.23.3",
    "serverless-offline": "^13.6.0",
    "ts-node": "^10.4.0",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^5.7.3",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.0.2"
  },
  "prettier": {
    "tabWidth": 2,
    "useTabs": false,
    "semi": true,
    "singleQuote": false,
    "quoteProps": "as-needed",
    "trailingComma": "none",
    "bracketSpacing": true,
    "arrowParens": "always",
    "printWidth": 80,
    "endOfLine": "auto"
  }
}
